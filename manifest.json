{
  "name": "Auto-fix Interpals profile pics",
  "description": "Auto-adapt the width of Interpals profile pictures as you browse on them. No more cropped images!",
  "version": "1.0",
  "manifest_version": 3,
  "background": {
    "service_worker": "background.js"
  },
  "permissions": [
        "scripting",
        "tabs"
  ],
  "host_permissions": [
        "http://*/*",
        "https://*/*"
  ],
  "icons": {
    "16": "/images/get_started16.png",
    "32": "/images/get_started32.png",
    "48": "/images/get_started48.png",
    "128": "/images/get_started128.png"
  }
}
